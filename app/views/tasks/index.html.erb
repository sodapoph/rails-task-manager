<div class="container mx-auto" style="width: 300px;">
    <h1>Today's Tasks:</h1>
  <div class="d-flex align-content-center">
    <% @tasks.each do |task| %>
      <% if task.completed %>
        <i class="far fa-check-square"></i>
        <% else %>
        <i class="far fa-square"></i>
      <% end %>
    <h2><%= link_to task.title, task_path(task) %></h2>
    <% end %>
  </div>
</div>
