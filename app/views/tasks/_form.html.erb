<div class="container mx-auto col-sm-2" style="width: 300px;">
  <h1>New/Edit Task</h1>
  <%= form_for @task do |t| %>
      <div class="form-group">
        <%= t.label :title, 'Enter Title' %>
        <%= t.text_field :title %>
      </div>

      <div class="form-group">
        <%= t.label :details %>
        <%= t.text_field :details %>
      </div>

      <div class="form-group">
      <%= t.check_box(:completed) %>
      <%= t.label(:completed, "Is this task completed?") %>
      </div>

      <div class="form-group">
        <%= t.submit class: 'btn btn-primary' %>
      </div>
  <% end %>
</div>
