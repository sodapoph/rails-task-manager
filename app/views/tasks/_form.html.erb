<div class="container mx-auto" style="width: 400px;">
  <%= form_for @task do |t| %>
    <div class="form-group">
      <%= t.label :title, 'Task Title' %>
      <%= t.text_field :title %>
    </div>
    <div class="form-group">
      <%= t.label :details %>
      <%= t.text_field :details %>
    </div>
    <div class="form-group">
      <%= t.check_box(:completed) %>
      <%= t.label(:completed, "Is this task completed?") %>
    </div>
    <div class="form-group" id="form-btn">
      <%= t.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
